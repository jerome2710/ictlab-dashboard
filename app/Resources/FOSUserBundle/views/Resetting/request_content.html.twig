{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path('fos_user_resetting_send_email') }}" method="post" class="default-form clearfix js-validate-form">
	<div class="form-group">
		{% if invalid_username is defined %}
			<div class="notification">
				<h3 class="notification__title">Oeps</h3>
				<p class="notification__message">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
			</div>
		{% endif %}
		<label for="username">{{ 'resetting.request.username'|trans }}</label>
		<input type="text" id="username" name="username" required="required">
	</div>
	<div class="form-group">
		<button type="submit" class="button button--primary pull-right">{{ 'resetting.request.submit'|trans }}</button>
		<a href="{{ path("fos_user_security_login") }}" class="button button--ghost pull-right">Terug naar inloggen</a>
	</div>
</form>